<article>
	<h2>Add New Record</h2>
	<form action='/{{app_name}}/add' method='post'>
		<p></p>
		<input type='submit' name='submit' value='submit' />
	</form>
</article>
<article>
	<h2>{$name}</h2>
	<table>
		<thead>
			<tr><td>SN</td><td>Action</td></tr>
		</thead>
		<tbody>
			{%for item in items : <tr><td>item.sn</td><td><a href='/{{app_name}}/view/item.sn'>view</a> | <a href='/{{app_name}}/update/item.sn'>update</a> | <a title='delete' alt='item.sn' href='/{{app_name}}/remove/item.sn'>delete</a></td></tr> endfor%}
		</tbody>
	</table>
</article>
<script>
	jQuery(document).ready(function($){
		$("a[title]=delete").click(function(){
			var identity = $(this).attr("alt");
			$ans = confirm("Are you sure you want to delete "+identity+"?");
			if($ans){return true;} else {return false;}
		});
	});
</script>
